<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.teitheapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".TeitheApp"
            android:label="@string/app_name"
            android:theme="@style/MyLightTheme.NoShadow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Empty" />
        <activity android:name=".InformationsLauncher" />
        <activity android:name=".ServicesLauncher" />
        <activity android:name=".ExtraLauncher" />
        <activity
            android:name=".DiplomaNumber"
            android:configChanges="orientation"
            android:theme="@style/MyLightTheme.NoShadow" />
        <activity android:name=".Home" />
        <activity
            android:name=".MyGrades"
            android:configChanges="orientation"
            android:theme="@style/MyLightTheme.NoShadow" />
        <activity
            android:name=".MyCourseDeclaration"
            android:configChanges="orientation"
            android:theme="@style/MyLightTheme.NoShadow" />
        <activity
            android:name=".TeacherInfo"
            android:configChanges="orientation"
            android:theme="@style/MyLightTheme.NoShadow" />
        <activity
            android:name=".ViewTeacher"
            android:configChanges="orientation"
            android:theme="@style/Theme.CustomDialog" />
        <activity android:name=".Preferences" />
        <activity
            android:name=".HydraAnnouncements"
            android:configChanges="orientation"
            android:theme="@style/MyLightTheme.NoShadow" />
        <activity
            android:name=".Login"
            android:theme="@style/Theme.CustomDialog" />
        <activity
            android:name=".InfoDialog"
            android:theme="@style/Theme.CustomDialog" />
        <activity
            android:name=".DownloadAttachment"
            android:theme="@style/Theme.CustomDialog" />
        <activity
            android:name=".MyInfo"
            android:theme="@style/MyLightTheme.NoShadow" />
        <activity
            android:name=".BasicInfo"
            android:theme="@style/MyLightTheme.NoShadow" />

        <service
            android:name=".HydraAnnouncementsService" >
            <intent-filter>
                <action android:name="com.example.android.apis.app.REMOTE_SERVICE" />
            </intent-filter>
        </service>
        <receiver android:name=".BootCompletedIntentReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>